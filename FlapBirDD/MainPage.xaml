<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlapBirDD.MainPage"
             BackgroundImageSource="espapo.png"
             Shell.NavBarIsVisible="false">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>



        <Button Text="tela de inicio"
                BackgroundColor="#5D693C92"
               TextColor="#FF040307"
               FontSize="Large"
               HorizontalOptions="Center"
               Grid.Row="0"
               Grid.Column="1"
               Margin="0,20,0,20"/>


        <Button Text="iniciar"
                TextColor="#D2FF0101"
                BackgroundColor="#FF0906A0"
                Clicked="Comessarr"
                HorizontalOptions="Center"
                WidthRequest="300"
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Margin="0,0,0,50"/>

      </Grid>
</ContentPage>
